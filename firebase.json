{
  "hosting": {
    "public": "dist/apps/client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/desktop",
        "destination": "https://github.com/ffxiv-teamcraft/ffxiv-teamcraft/releases/latest",
        "type": 301
      },
      {
        "source" : "/sitemap",
        "destination" : "https://firebasestorage.googleapis.com/v0/b/foo",
        "type" : 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      },
      {
        "source": "!/sitemap",
        "function": "app"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          }
        ]
      }
    ]
  }
}
